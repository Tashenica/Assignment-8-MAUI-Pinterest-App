<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Pinterest_App.Views.SearchPage"
             Title="Search">

    <StackLayout Padding="10">
        <Entry Placeholder="Search for pins..." />

        <CollectionView ItemsSource="{Binding Categories}" ItemsLayout="HorizontalList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="5">
                        <Image Source="{Binding ImageUrl}" HeightRequest="100" WidthRequest="100"/>
                        <Label Text="{Binding Title}" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>