<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Pinterest_App.Views.HomePage"
             Title="<Pinterest">
             
    
    <CollectionView ItemsSource="{Binding Pins}" 
                    SelectionMode="Single" 
                    SelectionChanged="PinsCollectionView_SelectionChanged"
                    ItemsLayout="Grid, 2"
                    BackgroundColor="White">
        
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="5">
                    <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="200" HasShadow="True" CornerRadius="10"/>
                    <Label Text="{Binding Title}" FontAttributes="Bold" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>