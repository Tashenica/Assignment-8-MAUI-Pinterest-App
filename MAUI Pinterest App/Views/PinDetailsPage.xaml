<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Pinterest_App.Views.PinDetailsPage"
             Title="Details">

    <ScrollView>
        <StackLayout Padding="10">
            <Image x:Name="PinImage"  HeightRequest="300"/>
            <Label x:Name="PinTitle" FontSize="Large" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Label x:Name="PinDescription" FontSize="Medium"/>
        </StackLayout>
    </ScrollView>
    
</ContentPage>